<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".toko">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/green_login"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_kembali"
                android:layout_gravity="center"
                android:layout_alignBottom="@+id/toko"
                android:layout_marginBottom="7dp"
                android:id="@+id/icon_kembali_kalkulasi"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toko"
                android:layout_marginTop="35dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/icon_kembali_kalkulasi"
                android:textColor="@color/kuning_login"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20dp"
                android:id="@+id/toko">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Search..."
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:background="@drawable/edit_text_bg"
                android:layout_marginTop="105dp"
                android:paddingStart="20dp">
            </EditText>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/green_login"
                app:cardCornerRadius="30dp"
                app:cardElevation="5dp">

                <Button
                    android:id="@+id/ttokobibit"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/green_login"
                    android:elevation="1000dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Bibit"
                    android:textColor="@color/white"
                    android:textSize="12dp">
                </Button>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="5dp">

                <Button
                    android:id="@+id/ttokoperalatan"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:elevation="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Peralatan"
                    android:textColor="@color/black"
                    android:textSize="12dp">
                </Button>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="5dp">

                <Button
                    android:id="@+id/ttokopupuk"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:elevation="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Pupuk"
                    android:textColor="@color/black"
                    android:textSize="12dp">
                </Button>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/desc_produk"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/image_bibit_sawit"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/white">
                    </ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Bibit Sawit"
                        android:textSize="15dp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Rp 200/bibit"
                        android:textSize="12dp">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>