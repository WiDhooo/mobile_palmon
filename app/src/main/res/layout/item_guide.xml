<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/guide_card"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/guide_image"
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/carousel_sawit_1"
                    android:layout_gravity="center"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/guide_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="16sp"
                        android:text="ini artikel penanaman" />

                    <TextView
                        android:id="@+id/guide_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/guide_title"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="10sp"
                        android:text="Pembersihan Lahan: Bersihkan lahan dari tanaman pengganggu..." />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
</FrameLayout>
