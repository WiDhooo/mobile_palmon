<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/icon_kembali_detail_toko"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_kembali_detail_toko"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/icon_kembali_detail_toko"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_detail_toko"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bibit Sawit"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilihan bibit sawit terbaik yang dirawat sepenuh hati seperti anak sendiri."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Sawit"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/product_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sawit-sawitan"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 2000/bibit"
                android:textSize="14sp"
                android:textColor="#666666" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jumlah"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium" />

            <ImageButton
                android:id="@+id/quantity_decrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_minus"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Decrease quantity" />

            <TextView
                android:id="@+id/quantity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:text="10"
                android:textSize="14sp"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/quantity_increase"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_plus_detail_toko"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Increase quantity" />
        </LinearLayout>

        <Button
            android:id="@+id/button_beli_detail_toko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Beli Sekarang"
            android:backgroundTint="#006400"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
