<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ubah_kalkulasi">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/green_login"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_kembali"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:id="@+id/icon_kembali_kalkulasi_ubah"
                android:layout_marginStart="10dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catat Kalkulasi"
                android:layout_marginTop="35dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/icon_kembali_kalkulasi"
                android:textColor="@color/kuning_login"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20dp">
            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Panen"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:hint="Masukkan Tanggal Panen"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13dp"
                android:background="@drawable/edit_text_bg_kalkulasi"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tgl_panen_kalkulasi_ubah">
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@drawable/line_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil Panen"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga TBS (Rp/Kg)"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="5dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:hint="Masukkan harga TBS/ kg"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13dp"
                android:background="@drawable/edit_text_bg_kalkulasi"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/harga_tbs_kalkulasi_ubah">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berat Total TBS (Kg)"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="10dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:hint="Masukkan total berat TBS"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13dp"
                android:background="@drawable/edit_text_bg_kalkulasi"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/berat_total_tbs_kalkulasi_ubah">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potongan Timbangan / Tara (%)"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="10dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:hint="Masukkan potongan timbangan"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13dp"
                android:background="@drawable/edit_text_bg_kalkulasi"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/potongan_timbangan_kalkulasi_ubah">
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@drawable/line_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengeluaran"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upah Panen (Rp/kg)"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="5dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:hint="Masukkan upah panen"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13dp"
                android:background="@drawable/edit_text_bg_kalkulasi"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/upah_panen_kalkulasi_ubah">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biaya Transportasi (Rp)"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="10dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:hint="Masukkan biaya transportasi"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13dp"
                android:background="@drawable/edit_text_bg_kalkulasi"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/biaya_transportasi_kalkulasi_ubah">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biaya lainnya (Rp)"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="10dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:hint="Masukkan biaya lainnya"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13dp"
                android:background="@drawable/edit_text_bg_kalkulasi"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/biaya_lainnya_kalkulasi_ubah">
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button
            android:layout_width="154dp"
            android:layout_height="43dp"
            android:text="Kembali"
            android:background="@drawable/bg_button_kembali_catat_kalkullasi"
            android:textColor="@color/green_login"
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/button_kembali_catat_kalkulasi_ubah"
            android:textSize="15dp"
            android:layout_marginTop="3dp">
        </Button>

        <Button
            android:layout_width="154dp"
            android:layout_height="50dp"
            android:text="Simpan"
            android:fontFamily="@font/poppins_bold"
            android:layout_toEndOf="@id/button_kembali_catat_kalkulasi_ubah"
            android:backgroundTint="@color/green_login"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            android:id="@+id/button_simpan_ubah">
        </Button>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>