<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batalkan Kalkulasi"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_bold"
            android:textFontWeight="700"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apakah anda ingin membatalkan aktivitas kalkulasi?"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textFontWeight="300"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lanjutkan"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_lanjutkan_kalkulasi"
            android:background="@drawable/rounded_border_green"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            android:textFontWeight="700"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ya, batalkan"
            android:padding="10dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/btn_batal_kalkulasi"
            android:background="@drawable/rounded_border_white"
            android:textColor="@color/green_login"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            android:backgroundTint="@color/green_login"
            android:textFontWeight="700"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
