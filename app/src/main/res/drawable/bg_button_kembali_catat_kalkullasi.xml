<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna latar belakang tombol -->
    <solid android:color="@android:color/transparent" /> <!-- Ganti warna latar belakang jika diinginkan -->

    <!-- Border (stroke) untuk tombol -->
    <stroke
        android:width="1dp"
        android:color="#FF000000">
    </stroke>

    <!-- Radius sudut tombol (opsional) -->
    <corners android:radius="50dp" /> <!-- Radius untuk membuat sudut membulat -->
</shape>
